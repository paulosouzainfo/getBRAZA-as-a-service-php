{
    "name": "getbraza/php-sdk",
    "description": "SDK PHP para integração com a API do getBRAZA",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Souza",
            "email": "paulo.souza@braza.com.br"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"  
    },
    "autoload": {
        "psr-4": {
            "GetBraza\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GetBraza\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "test-coverage": "phpunit --coverage-html coverage/ tests/"
    }
}